    "paths": {
        "/api/v1/attendance/clock-in": {
            "post": {
                "tags": [
                    "Attendance"
                ],
                "summary": "Clock in an employee",
                "operationId": "7fa3546757b447c76dcd375751727497",
                "requestBody": {
                    "description": "Provide the employee ID to clock in",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "employee_id"
                                ],
                                "properties": {
                                    "employee_id": {
                                        "type": "integer",
                                        "format": "int64",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Clock in successful"
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "400": {
                        "description": "Employee already clocked in today"
                    }
                }
            }
        },
        "/api/v1/attendance/clock-out": {
            "put": {
                "tags": [
                    "Attendance"
                ],
                "summary": "Clock out an employee",
                "operationId": "697dbcb480193498e7f9f2fe5da9b941",
                "requestBody": {
                    "description": "Provide the employee ID to clock out",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "employee_id"
                                ],
                                "properties": {
                                    "employee_id": {
                                        "type": "integer",
                                        "format": "int64",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Clock out successful"
                    },
                    "404": {
                        "description": "No active attendance found to clock out"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
